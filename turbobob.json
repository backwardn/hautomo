{
	"for_description_of_this_file_see": "https://github.com/function61/turbobob",
	"version_major": 1,
	"project_name": "home-automation-hub",
	"builders": [
		{
			"name": "default",
			"dockerfile_path": "build-default.Dockerfile",
			"mount_destination": "/go/src/github.com/function61/home-automation-hub",
			"dev_command": ["bash"],
			"pass_envs": ["BINTRAY_CREDS"],
			"contextless_build": true
		},
		{
			"name": "alexaconnector",
			"dockerfile_path": "build-alexaconnector.Dockerfile",
			"mount_source": "lambda-alexa-connector",
			"mount_destination": "/app",
			"dev_command": ["bash"],
			"pass_envs": ["BINTRAY_CREDS"],
			"contextless_build": true
		}
	],
	"os_arches": {
		"linux-amd64": true,
		"linux-arm": true
	}
}
